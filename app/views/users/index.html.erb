<h1>Listing users</h1>

<table>
  <thead>
    <tr>
      <th>User ID</th>
      <th>User Name</th>
      <th>User Email</th>
      <th>URL Hash</th>
      <th>Project Deadline</th>
      <th>Project Name</th>

    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.url_hash %></td>
        <td><%= user.project_deadline.strftime("%d/%m/%y") %></td>
        <td><%= user.project_name %></td>
        <td><%= link_to 'Delete', user_path(user.id), :confirm => "Are you sure you want to delete #{user.name}?", :method => :delete %></td>
        <td><%= link_to 'Edit', edit_user_path(user.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>

