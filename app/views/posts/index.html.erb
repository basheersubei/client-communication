<h1>Listing posts</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Content</th>
      <th>Comment ID | Comment | Commenter</th>
      <th> New Comment </th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id    %></td>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        

        <td><% post.comments.each do |comment| %>
            <%= comment.id      %> | 
            <%= comment.content %> |
            <%= @users.find(post.user_id).name %> <br/>
            <% end %>
        </td>
        
        <td>
            <%= form_for :comment, :url => comments_path do |f| %>
            
            <p>
              Comment <%= f.label :content %><br>
              <%= f.text_area :content %>
            </p>



            <p>
              <%= f.hidden_field :post_id, :value => post.id %>
            </p>

            <p>
              <%= f.submit %>
            </p>
          <% end %>

        </td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
