<h1>Listing posts</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Content</th>
      <th>Comment ID | Comment | Commenter</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id    %></td>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        

        <td><% post.comments.each do |comment| %>
            <%= comment.id      %> | 
            <%= comment.content %> |
            <%= @user.name %> <br/>
            <% end %>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
<p>Create New Post</p>

<%= form_for :post, url: posts_path do |f| %>
  <p>
    Post <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    Post <%= f.label :content %><br>
    <%= f.text_area :content %>
  </p>

  <%= f.hidden_field :url_hash, :value => @user.url_hash %>

  <%= f.hidden_field :user_id, :value => @user.id %>

  <p>
    <%= f.submit %>
  </p>
<% end %>