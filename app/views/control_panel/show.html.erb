<h1>Listing posts</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Content</th>
      <th>Comment ID | Comment</th>
      <th> New Comment </th>

    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id    %></td>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post_path(post),
                    method: :delete, data: { confirm: 'Are you sure?' } %></td>

        <td><% post.comments.each do |comment| %>
            <%= comment.id      %> | 
            <%= comment.content %>  | 
            <%= link_to 'Destroy', comment_path(comment),
                    method: :delete, data: { confirm: 'Are you sure?' } %><br/>
            <% end %>
        </td>


        <td>
            <%= form_for :comment, :url => comments_path do |f| %>
            
            <p>
              Comment <%= f.label :content %><br>
              <%= f.text_area :content %>
            </p>



            
            <%= f.hidden_field :post_id, :value => post.id %>
            

            
            <%= f.hidden_field :url_hash, :value => @user.url_hash %>
            

            <p>
              <%= f.submit %>
            </p>
          <% end %>

        </td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
<p>Create New Post</p>

<%= form_for :post, url: posts_path do |f| %>
  <p>
    Post <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    Post <%= f.label :content %><br>
    <%= f.text_area :content %>
  </p>

  <%= f.hidden_field :url_hash, :value => @user.url_hash %>

  <%= f.hidden_field :user_id, :value => @user.id %>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', control_panel_path %>